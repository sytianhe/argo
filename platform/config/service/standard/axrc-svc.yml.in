apiVersion: v1
kind: Service
metadata:
    name: axrc
    labels:
        app: axrc
        tier: devops
        role: axcritical
spec:
    selector:
        app: axrc-deployment
    ports:
      - port: 8992
        targetPort: 8992

---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
    name: axrc-deployment
spec:
    replicas: 1
    template:
        metadata:
            labels:
                app: axrc-deployment
                tier: platform
                role: axcritical
            annotations:
                pod.alpha.kubernetes.io/init-containers: '[
                    {
                        "name": "pre",
                        "image": "${REGISTRY}/${NAMESPACE}/kube-init:${VERSION}",
                        "imagePullPolicy": "IfNotPresent",
                        "command": ["timeout", "1200", "sh", "-c", "wait_http http://axmon.axsys:8901/v1/axmon/ping http://axdb.axsys:8083/v1/axdb/version"]
                    }
                ]'
        spec:
            containers:
              - name: axrc
                image: ${REGISTRY}/${NAMESPACE}/axrc:${VERSION}
                command: [ "sh", "-c", "/axrc/bin/server $AXDB $KAFKA $AXOPS"]
                env:
                  - name: AXDB
                    value: "http://axdb.axsys:8083/v1"
                  - name: AXOPS
                    value: "http://axops-internal.axsys:8085/v1"
                  - name: KAFKA
                    value: "kafka-zk:9092"
                  - name: AX_CLUSTER
                    value: "${AX_CLUSTER_NAME_ID}"
                  - name: AXOPS_EXT_DNS
                    value: "${AXOPS_EXT_DNS}"
                  - name: AX_REGION
                    value: "${AX_AWS_REGION}"
                  - name: AX_NAMESPACE
                    value: "${NAMESPACE}"
                  - name: AX_VERSION
                    value: "${VERSION}"
                  - name: REGISTRY
                    value: "${REGISTRY}"
                resources:
                    requests:
                        cpu: 100m
                        memory: 200Mi
                    limits:
                        cpu: 500m
                        memory: 400Mi
                livenessProbe:
                  httpGet:
                    path: /v1/ping
                    port: 8992
                  initialDelaySeconds: 300
                  timeoutSeconds: 20
                  periodSeconds: 60
            nodeSelector:
                ax.tier: applatix
            imagePullSecrets:
              - name: applatix-registry
